        &.sizes a span{
            width:50px;
            border:solid 1px #CCC;
        }
    }
    ul.box-list-stype{li{label{color: #e0545f;}}}
    clear:both;
    .clear{
          float: right;
    line-height: 15px;
    text-transform: none;
    color: red;
    }
    h5.filter-title {
        font-size: 12px;
        color: #E0545F;
        margin: 20px 0;
    }

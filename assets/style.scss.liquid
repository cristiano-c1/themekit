//## Gray and brand colors for use across Bootstrap.
$body-bg: #FFF !default;
$light-gray      : lighten(#000000, 60%) !default;        // #999999
$very-light-gray : #e5e5e5 !default;                      // #e5e5e5
$very-dark-gray  : lighten(#000000, 9%) !default;         // #171717

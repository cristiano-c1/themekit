    yoloner
  </div>
</div-->
<div class="site-footer__main ">
{% assign footer_menu_1 = section.settings.footer_menu_1%}
{% assign footer_menu_2 = section.settings.footer_menu_2%}
{% assign footer_menu_3 = section.settings.footer_menu_3%}
	<div class="wrapper">
		<div class="grid">
			<div class="grid__item large--five-twelfths medium--five-twelfths">
				<h4>{{section.settings.footer_contact_title}}</h4>
					<a href="/" class="site-footer__logo-link">
            <img width="300" src="{{ 'Logo_Quadri.png' | asset_url}}" alt="Logo">
				  </a>
				<div class="contact">{{section.settings.footer_contact_content}}</div>

			</div>
			<div class="grid__item large--seven-twelfths medium--seven-twelfths">
				<div class="grid">
						<div class="grid__item large--one-third medium--one-third">
							<h4>{{section.settings.footer_openning_title}}</h4>
							<div class="openning">{{section.settings.footer_openning_content}}</div>


						</div>
						<div class="grid__item large--one-third medium--one-third">
							<h4>{{section.settings.footer_menu_1_title}}</h4>
							<ul>
								{% for link in linklists[footer_menu_1].links %}
								<li><a href="{{ link.url }}">{{ link.title }}</a></li>
								{% endfor %}
							</ul>
						</div>
						<div class="grid__item large--one-third medium--one-third">
							<h4>{{section.settings.footer_menu_2_title}}</h4>
							<ul>
								{% for link in linklists[footer_menu_2].links %}
								<li><a href="{{ link.url }}">{{ link.title }}</a></li>
								{% endfor %}
							</ul>
						</div>
				</div>
				<div class="grid">
							<div class="grid__item large--one-half medium--one-half">
								<div class="social">{{section.settings.footer_social_content}}</div>
							</div>
							<div class="grid__item large--one-half medium--one-half">
								<!--a  class="site-footer__image">
                    {% if settings.footer_image == blank %}
                    {% capture _img_url %}footer_image.png{% endcapture %}
                    <img src="{{ _img_url | asset_url}}" alt="Logo">
                    {% else %}
                    <img src="{{ settings.footer_image | img_url:'master' }}" alt="Logo">
                    {% endif %}
							    </a-->
							</div>
						</div>
			</div>
		</div>
	</div>
</div>
<div class="site-footer__bottom ">
	<div class="wrapper">
		<div class="grid">
			<div class="grid__item large--one-half">
					<div class="copyright_text ">
								{{section.settings.copyright_content}}
					</div>
			</div> <!-- end newsletter -->

			<div class="grid__item large--one-half">
					<div class="inner payment__image large--right">
          {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
              <a href="{{block.settings.link}}" class="i-payment">
                {% if block.settings.image == blank %}
                  <img src="{{ _img_url | asset_url}}" alt="Banner Image">
                  {% else %}
                  <img src="{{ block.settings.image | img_url:'master' }}" alt="Banner Image">
                {% endif %}
              </a>
            {% endfor %}
          {% endif %}
					</div>
				</div> <!-- end payment -->
		</div>
	</div>
</div> <!-- end bottom -->

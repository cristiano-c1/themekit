<!-- PAGE TITLE -->
<div class="about">
  <div class="about__content">
    <div class="space-40">
      <div class="grid">
        <div class="grid__item space-40">
          <h2>{{section.settings.about2_title}}</h2>
          <p class="about__desc">{{section.settings.about2_content}}</p>
        </div>
      </div>
      <div class="grid">
        <div class="grid__item large--two-quarters medium--two-quarters small--one-whole">
          <div class="about__item">
            <h4>{{section.settings.about3_title}}</h4>
            <div class="about__desc">
              {{section.settings.about3_content}}
            </div>
          </div>
        </div>
        <div class="grid__item large--two-quarters medium--two-quarters small--one-whole">
          <div class="about__item">
            <h4>{{section.settings.about4_title}}</h4>
            <div class="about__desc">
              {{section.settings.about4_content}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


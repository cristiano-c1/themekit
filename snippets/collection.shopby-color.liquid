{% if settings.enable_shop_by_tags_1 %}

<div class="filter-block filter-custom filter-tag color">
  {% assign tags = settings.shop_by_tags_1_list_tags | split: ',' %}
  <h5 class="filter-title"> {{ settings.shop_by_tags_1_title }}<a href="javascript:void(0)" class="clear" style="display:none">x</a> </h5>

  <div class="filter-content">
   <ul class="box-grid-stype colors">
      {% for i in (1..20) %}
      {% capture shop_by_color_text %}shop_by_color_text_{{ i }}{% endcapture %}


      {% if settings[shop_by_color_text] != blank %}
      {% assign tag = settings[shop_by_color_text] | strip %}
      {% if collection.all_tags contains tag %}
      <li class="li-color{% if current_tags contains tag %}  active{% endif %}">


        {% assign tag_value = tag | handleize %}
        <input type="checkbox" value="{{ tag_value }}" {% if current_tags contains tag %}checked{% endif %}/>
        <a href="javascript:void(0)" title="{{tag}}">
          <span class="color {{tag_value}}"></span>
        </a>
      </li>
      {% endif %}
      {% endif %}
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}


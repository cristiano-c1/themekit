<!-- /snippets/product-grid-item.liquid -->
{% case section.settings.nb_column %}
	{% when '2' %}
		 {% capture grid_item_width %} large--one-half medium--one-half {% endcapture %}
	{% when '3' %}
		 {% capture grid_item_width %} large--one-third medium--one-third {% endcapture %}
	{% when '4' %}
		 {% capture grid_item_width %} large--one-quarter medium--one-third {% endcapture %}
	{% when '5' %}
		 {% capture grid_item_width %} large--one-fifth medium--one-third {% endcapture %}
	{% when '6' %}
		 {% capture grid_item_width %} large--one-sixth medium--one-third {% endcapture %}
	{% else %}
		 {% capture grid_item_width %} large--one-quarter medium--one-third {% endcapture %}
{% endcase %}

<div class="grid__item {{ grid_item_width }}">
	{% include 'product-item' %}
</div>